{
  "name": "ts-setup",
  "description": "A setup example for projects with typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Daniel Lucas <daniellucas382@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify ./index.ts",
    "clear": "rm -rf build/",
    "build": "babel . --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "preprod": "yarn clear && yarn build",
    "prod": "yarn start",
    "test": "jest --silent --colors --noStackTrace --no-cache",
    "test:unit": "yarn test --watch -c jest.unit.config.js",
    "test:integration": "yarn test --watch -c jest.integration.config.js",
    "test:staged": "yarn test --passWithNoTests --findRelatedTests",
    "test:ci": "yarn test --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
